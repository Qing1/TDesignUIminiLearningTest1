      </t-row>
    <!-- 年龄 部门 -->
      <t-row  style="margin-top: 20rpx;">
        <t-col offset="1" span="5" t-class="employeeInfoDesStyle" >年龄</t-col>
        <t-col  span="5" t-class="employeeInfoValueStyle">30</t-col>
        <t-col offset="2" span="5" t-class="employeeInfoDesStyle" >部门</t-col>
        <t-col  span="5" style="height: 60rpx;line-height: 60rpx;" >研发</t-col>
      </t-row>

    <!-- 年龄 部门 -->
