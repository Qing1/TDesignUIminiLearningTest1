<!--pages/login/login.wxml-->
<view class="boxContainer0">
  <!-- 第一行 登录图标 -->
  <t-row style="margin-top: 100rpx;">
    <t-col span="6" offset="9" >
      <t-image src="{{imageSrc}}" mode="aspectFill" width="100" height="100" aria-label="一个放置在墙角的黄色行李箱" />
    </t-col>
  </t-row>

  <!-- 账号 密码  -->
  <t-row style="margin-top: 200rpx;">
    <t-col span="20" offset="2" style="background: #b9c3fd;height: 500rpx;border-radius: 40rpx;">
      <t-row style="margin-top: 133rpx;">
        <t-col span="4" offset="1" style="text-align: center;line-height: 60rpx;">账号</t-col>
        <t-col span="16" offset="1" style="text-align: center;height: 60rpx;line-height: 60rpx;box-sizing: border-box;">
          <t-input placeholder="请输入账号" align="center" t-class="inputStyle"></t-input>
        </t-col>
      </t-row>

      <t-row style="margin-top: 133rpx;">
        <t-col span="4" offset="1" style="text-align: center;line-height: 60rpx;">密码</t-col>
        <t-col span="16" offset="1" style="text-align: center;height: 60rpx;line-height: 60rpx;">
          <t-input placeholder="请输入密码" align="center" t-class="inputStyle"></t-input>
        </t-col>
      </t-row>

  
    </t-col>
  </t-row>

  <!-- 登录按钮 -->
  <t-row>
  <t-col span="8" offset="8" >
    <t-button  class="loginBtnStyle" >登录</t-button>
  </t-col>
  </t-row>
</view>